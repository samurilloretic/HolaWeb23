<a asp-page=".\edit" class="btn btn-primary">Adicionar Saludo</a>

<table class="table">
    @foreach (var saludo in Model.Saludos)
    {
        <tr>
            <td>@saludo.EnEspañol</td>
            <td>@saludo.EnIngles</td>
            <td>@saludo.EnItaliano</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/Saludos/Details" asp-route-saludoId="@saludo.Id">
                <i class="far fa-envelope"></i>              
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/Saludos/edit" asp-route-saludoId="@saludo.Id">
                <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                </a>
            </td>

            <td>
                <a class="btn btn-danger table-btn" asp-page="/Saludos/Delete" asp-route-saludoId="@saludo.Id">
                <i class="fas fa-skull-crossbones" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
    }
</table>
